<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/workout_display_bg" android:layout_margin="10dp">

    <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="name" android:textSize="30sp" android:padding="10dp"
    />
    <TextView
            android:text=" 0 steps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/step_no_text_item" android:layout_weight="1"
            android:textSize="18sp" android:padding="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/text_date_item"
            android:text="placeholder" android:textSize="18sp" android:padding="20dp"/>


</LinearLayout>
